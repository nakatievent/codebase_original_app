<div class="signup">
  <h2><%= @app_name %></h2>
  </br>
  <form action="/signup" method="post">
    <div class="form-group">
      <label for="formGroupExampleInput">ユーザーネーム</label>
      <input type="text" name="name" class="form-control" id="formGroupExampleInput" placeholder="ユーザーネームを入力して下さい。">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput">メールアドレス</label>
      <input type="text" name="email" class="form-control" id="formGroupExampleInput" placeholder="メールアドレスを入力して下さい。">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">パスワード</label>
      <input type="text" name="password" class="form-control" id="formGroupExampleInput2" placeholder="パスワードを入力して下さい。">
      </br>
    </div>
    <button type="submit" class="btn btn-outline-dark">新規登録する</button>
  </form>
</div>



